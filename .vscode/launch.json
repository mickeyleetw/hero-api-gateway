{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "[Local] API Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeVersion": "16",
      "program": "${workspaceFolder}/app.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Testing",
      "runtimeVersion": "16",
      "runtimeExecutable":"npm",
      "runtimeArgs":["run", "test"],
      "program": "${workspaceFolder}/app.js"
    }
  ]
}